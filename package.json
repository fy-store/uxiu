{
	"name": "uxiu",
	"type": "module",
	"version": "0.2.0-dev-7",
	"description": "基于 koa 构建的 nodejs 服务基础框架",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"*.d.ts"
	],
	"engines": {
		"node": "^18.0.0 || ^20.0.0 || >=22.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fy-store/uxiu.git"
	},
	"keywords": [
		"uxiu",
		"koa"
	],
	"author": "feiYu <feiyucode@gmail.com>",
	"license": "MIT",
	"scripts": {
		"test": "vitest",
		"dev": "cross-env NODE_ENV=development port=3323 tsx watch ./src/index.ts",
		"dev:utils": "cross-env NODE_ENV=development port=3323 tsx watch ./src/utils/__test__/index.ts",
		"dev:app": "cross-env NODE_ENV=development port=3323 tsx watch ./tests/dev/index.ts",
		"dev:pro": "cross-env NODE_ENV=development port=3323 tsx watch ./tests/pro/index.js",
		"pro": "node --watch ./tests/pro/index.js",
		"build": "rollup --config rollup.config.ts --configPlugin typescript && exit 0",
		"priview": "npm run build && npm run pro"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^28.0.2",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^16.0.0",
		"@rollup/plugin-typescript": "^12.1.2",
		"@types/koa": "^2.15.0",
		"@types/lodash-es": "^4.17.12",
		"@types/node": "^20.16.6",
		"cross-env": "^7.0.3",
		"lodash-es": "^4.17.21",
		"rollup": "^4.29.1",
		"rollup-plugin-dts": "^6.1.1",
		"tslib": "^2.8.1",
		"tsx": "^4.19.0",
		"typescript": "^5.5.4",
		"vitest": "^2.0.5"
	},
	"volta": {
		"node": "20.17.0"
	},
	"dependencies": {
		"koa": "^2.15.3",
		"koa-router": "^13.0.1",
		"koa-static": "^5.0.0",
		"nanoid": "^5.0.9"
	}
}